{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es6",
    "baseUrl": ".",
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },

  "include": ["src/**/*"]
}
